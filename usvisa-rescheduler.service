[Unit]
Description=US Visa Appointment Rescheduler
After=network.target

[Service]
Type=simple
User=root
WorkingDirectory=/root/usvisa-ca
ExecStart=/usr/bin/python3 /root/usvisa-ca/reschedule.py
Restart=always
RestartSec=60
StandardOutput=append:/root/usvisa-ca/logs/rescheduler.log
StandardError=append:/root/usvisa-ca/logs/rescheduler.error.log

[Install]
WantedBy=multi-user.target 